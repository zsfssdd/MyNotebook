<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/magenta"
        style="@style/colorPickerStyle"
        android:background="@color/colorPrimary"
        android:text="@string/magenta"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/red"
        style="@style/colorPickerStyle"
        android:background="@color/colorPrimary_Red"
        android:text="@string/red"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/pink"
        style="@style/colorPickerStyle"
        android:background="@color/colorAccent_Pink"
        android:text="@string/pink"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/yellow"
        style="@style/colorPickerStyle"
        android:background="@color/colorAccent_Yellow"
        android:text="@string/yellow"/>
</LinearLayout>